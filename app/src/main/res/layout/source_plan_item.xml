<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/source_plan_item_ll"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="#ffffff">

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#F5F5F5" />

    <ImageView
        android:id="@+id/source_plan_item_iv"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="17dp" />

    <TextView
        android:id="@+id/source_plan_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="30dp"
        android:layout_toRightOf="@+id/source_plan_item_iv"
        android:text="11111111111" />

    <TextView
        android:id="@+id/source_plan_item_need"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="30dp"
        android:layout_toLeftOf="@+id/sample_activity_list_group_expanded_image"
        android:text="缺口:100"
        android:textColor="@color/google_red" />

    <ImageView
        android:id="@+id/sample_activity_list_group_expanded_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:src="@mipmap/product_manger_pointer_show" />

</RelativeLayout>


