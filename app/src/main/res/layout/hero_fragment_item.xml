<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_margin="5dp"
        android:id="@+id/hero_item_ll"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:background="@drawable/hero_item_bac">

        <ImageView
            android:id="@+id/hero_item_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="17dp"/>

        <TextView
            android:id="@+id/hero_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/hero_item_iv"
            android:layout_marginStart="40dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/hero_item_iv"
            android:text="11111111111" />

        <TextView
            android:id="@+id/hero_item_class_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/hero_item_iv"
            android:layout_marginStart="40dp"
            android:layout_marginTop="45dp"
            android:text="slider" />

    </RelativeLayout>
</LinearLayout>