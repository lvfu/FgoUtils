<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:hjm="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/google_write"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/servant_info_nickname_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/servantTitle"
            android:text="昵称:" />

        <TextView
            android:id="@+id/servant_info_nickname"
            style="@style/servantBody"
            android:text="大王" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/servant_info_attribute_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/servant_info_nickname_ll">

        <TextView
            style="@style/servantTitle"
            android:text="阵营:" />

        <TextView
            android:id="@+id/servant_info_attribute"
            style="@style/servantBody"
            android:text="大王" />
    </LinearLayout>

    <TextView
        android:id="@+id/servant_info_line_skill"
        android:layout_below="@+id/servant_info_attribute_ll"
        style="@style/servantTitle"
        android:text="技能:" />

    <View
        android:id="@+id/servant_info_line_one"
        android:layout_below="@+id/servant_info_line_skill"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f5f5f5" />

    <RelativeLayout
        android:id="@+id/servant_info_skill_one_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_below="@+id/servant_info_line_one"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/servant_info_skill_one_iv"
            style="@style/servantSkill"
            android:background="@mipmap/search" />

        <TextView
            android:id="@+id/servant_info_skill_one_name"
            style="@style/servantBody"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/servant_info_skill_one_iv"
            android:text="大王" />

        <ImageView
            style="@style/servantSkillIv"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/servant_info_skill_two_ll"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/servant_info_skill_one_ll"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/servant_info_skill_two_iv"
            style="@style/servantSkill"
            android:background="@mipmap/search" />

        <TextView
            android:id="@+id/servant_info_skill_two_name"
            style="@style/servantBody"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/servant_info_skill_two_iv"
            android:text="大王" />

        <ImageView
            style="@style/servantSkillIv"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/servant_info_skill_three_ll"
        android:padding="3dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/servant_info_skill_two_ll"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/servant_info_skill_three_iv"
            style="@style/servantSkill"
            android:background="@mipmap/search" />

        <TextView
            android:id="@+id/servant_info_skill_three_name"
            style="@style/servantBody"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/servant_info_skill_three_iv"
            android:text="大王" />

        <ImageView
            style="@style/servantSkillIv"/>
    </RelativeLayout>

</RelativeLayout>