<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@color/google_write"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/feed_back_item_rl"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_margin="5dp">

        <LinearLayout
            android:id="@+id/feed_back_item_ll"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.fgo.utils.base.CircleImageView
                android:id="@+id/feed_back_icon_iv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:src="@mipmap/person_default_image"
                app:civ_border_color="@color/google_deep_gray"
                app:civ_border_width="0.5dp" />

            <TextView
                android:id="@+id/feed_backo_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/feed_back_icon_iv"
                android:layout_marginTop="10dp"
                android:maxLength="10"
                android:singleLine="true"
                android:text="cccccccceeeecccc"
                android:textColor="@color/google_red"
                android:textSize="10dp" />


        </LinearLayout>

        <TextView
            android:id="@+id/feed_backo_item_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/feed_back_item_ll"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingRight="20dp" />

        <TextView
            android:id="@+id/feed_backo_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
          android:layout_marginBottom="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:singleLine="true"
            android:text="2008/08/08 20:08:08"
            android:textSize="11sp" />

    </RelativeLayout>
</LinearLayout>