<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="15dp"
    android:background="@color/google_write"
    android:orientation="horizontal"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/source_plan_item_need"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/source_plan_item_iv"
            android:text="需求0" />

        <TextView
            android:id="@+id/source_plan_item_parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/source_plan_item_iv"
            android:text="持有0" />

        <TextView
            android:id="@+id/source_plan_item_surplus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/source_plan_item_iv"
            android:text="剩余0"
            android:textColor="@color/google_red" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true">

        <Button
            android:id="@+id/source_plan_item_bt_source_setting"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="75dp"
            android:layout_height="29dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:textColor="@color/google_write"
            android:background="@drawable/bg_product_manger_button"
            android:text="素材设置"
            android:textSize="13sp" />

        <Button
            android:id="@+id/source_plan_item_bt_source_search"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="75dp"
            android:layout_height="29dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/google_write"
            android:background="@drawable/bg_product_manger_button"
            android:text="素材掉落"
            android:textSize="13sp" />
    </LinearLayout>
</RelativeLayout>