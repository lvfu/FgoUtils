<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:hjm="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_marginTop="10dp"
        android:id="@+id/search_include_sx_ll"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:background="#f5f5f5"
        android:gravity="center_vertical"
        android:splitMotionEvents="false">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="-5dp"
            android:gravity="center_vertical"
            android:text="筛选"
            android:textColor="@color/google_red"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/search_include_sx_class_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@mipmap/no_select_bg"
            android:gravity="center"
            android:paddingBottom="12dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="@string/fund_class_type"
            android:textColor="@color/fund_dialog_border_text_color"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/search_include_sx_star"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-6dp"
            android:layout_weight="1"
            android:background="@mipmap/no_select_bg"
            android:gravity="center"
            android:paddingBottom="12dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="@string/fund_star"
            android:textColor="@color/fund_dialog_border_text_color"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/search_include_sx_sort"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-6dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@mipmap/no_select_bg"
            android:gravity="center"
            android:paddingBottom="12dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="@string/fund_sort"
            android:textColor="@color/fund_dialog_border_text_color"
            android:textSize="13sp">

        </TextView>

    </LinearLayout>
</LinearLayout>