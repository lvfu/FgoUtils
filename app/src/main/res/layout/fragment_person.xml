<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/google_write"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_home_personal_top_name"
        style="@style/MyTopTheme"
        android:layout_alignParentTop="true"
        android:text="个人中心" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@android:color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/servant_source_title"
            style="@style/servantTitle"
            android:layout_below="@+id/servant_info_attribute_ll"
            android:text="数据库:"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/init_greendao"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawablePadding="16dp"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"
            android:paddingRight="16dp"
            android:text="@string/init_db"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/update_greendao"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawablePadding="16dp"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"
            android:paddingRight="16dp"
            android:text="更新数据库"
            android:textSize="16sp" />

        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@android:color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/servant_source_date_title"
            style="@style/servantTitle"
            android:layout_below="@+id/servant_info_attribute_ll"
            android:text="数据:"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/data_out"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawablePadding="16dp"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"
            android:paddingRight="16dp"
            android:text="导出数据"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/data_in"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawablePadding="16dp"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"
            android:paddingRight="16dp"
            android:text="导入数据"
            android:textSize="16sp" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f5f5f5" />
    </LinearLayout>


</LinearLayout>