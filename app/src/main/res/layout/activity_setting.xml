<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/google_gray"
    tools:context=".activity.SettingActivity">

    <TextView
        android:id="@+id/tv_home_personal_top_name"
        style="@style/MyTopTheme"
        android:layout_alignParentTop="true"
        android:text="设置" />

    <LinearLayout
        android:id="@+id/setting_replace_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_home_personal_top_name"
        android:background="@android:color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/replace_account_tv"
            style="@style/persion_normal_item_style"
            android:text="切换账号" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#f5f5f5" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/setting_logout_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/logout_account_tv"
            style="@style/persion_normal_item_style"
            android:background="@color/google_write"
            android:drawableRight="@null"
            android:gravity="center"
            android:text="退出登录"
            android:textColor="@color/google_red" />
    </LinearLayout>
</RelativeLayout>